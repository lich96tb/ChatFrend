<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/nenc"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.lich96tb.chatfriend.DangKy">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="đăng ký tài khoản"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/edtTen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt"
        android:hint="Tên hiển thị"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edtEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt"
        android:hint="Email"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edtPass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:background="@drawable/edt"
        android:hint="Pass word"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edtPass11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt"
        android:hint="Nhập lại Pass word"
        android:inputType="textPassword"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnDangKy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt1"
            android:text="đăng ký" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt1"
            android:text="hủy"
            android:id="@+id/btnHuy1"/>
    </LinearLayout>
</LinearLayout>
